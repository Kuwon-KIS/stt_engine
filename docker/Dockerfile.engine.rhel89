# ============================================================================

RUN sudo yum install -y \
    # CA ì¸ì¦ì„œ (SSL/TLS)
    ca-certificates \
    openssl \
    curl \
    wget \
    \
    # Audio/Media ì²˜ë¦¬
    libsndfile \
